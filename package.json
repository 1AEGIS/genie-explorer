{
  "name": "genie-explorer",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "budo app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:dir": "rimraf build && mkdirp build",
    "build:browserify": "browserify app.js -t babelify -p common-shakeify -p browser-pack-flat/plugin -p [ css-extract -o build/style.css ] > build/bundle.js",
    "build:minify": "purifycss build/bundle.js build/style.css --out build/style.css && uglifyjs -cmo build/bundle.js build/bundle.js && postcss -r build/style.css",
    "build:html": "indexhtmlify --style build/style.css --title 'genie-explorer' < build/bundle.js > build/index.html",
    "build:clean": "rimraf build/style.css build/bundle.js",
    "build": "npm run build:dir && npm run build:browserify && npm run build:minify && npm run build:html && npm run build:clean",
    "deploy": "npm run build && surge -d genie-explorer.surge.sh build"
  },
  "browserify": {
    "transform": [
      "brfs",
      "sheetify/transform"
    ]
  },
  "babel": {
    "plugins": [
      "yo-yoify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goto-bus-stop/genie-explorer.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/goto-bus-stop/genie-explorer/issues"
  },
  "homepage": "https://github.com/goto-bus-stop/genie-explorer#readme",
  "devDependencies": {
    "babel-plugin-yo-yoify": "^0.7.0",
    "babelify": "^7.3.0",
    "brfs": "^1.4.3",
    "browser-pack-flat": "^2.5.0",
    "browserify": "^14.4.0",
    "budo": "^10.0.4",
    "common-shakeify": "^0.1.0",
    "css-extract": "^1.2.0",
    "cssnano": "^3.10.0",
    "indexhtmlify": "^1.3.1",
    "mkdirp": "^0.5.1",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^3.0.2",
    "purify-css": "^1.2.6",
    "rimraf": "^2.6.1",
    "uglify-es": "^3.0.28"
  },
  "dependencies": {
    "choo": "^6.0.0",
    "choo-expose": "^1.3.1",
    "choo-log": "^7.2.1",
    "defined": "^1.0.0",
    "frequency-viewer": "^0.1.0",
    "genie-drs": "^3.1.0",
    "genie-slp": "^1.0.0",
    "is-bmp": "^1.0.0",
    "jascpal": "^0.1.4",
    "nanocomponent": "^6.2.0",
    "on-load": "^3.2.0",
    "prettier-bytes": "^1.0.4",
    "prismjs": "^1.6.0",
    "sheetify": "^6.1.1",
    "tachyons-box-sizing": "^3.2.1",
    "tachyons-flexbox": "^2.0.5",
    "tachyons-floats": "^3.0.4",
    "tachyons-font-family": "^4.3.3",
    "tachyons-font-weight": "^5.0.4",
    "tachyons-heights": "^6.1.3",
    "tachyons-lists": "^2.0.12",
    "tachyons-skins": "^4.1.0",
    "tachyons-spacing": "^6.0.4",
    "tachyons-widths": "^5.2.1",
    "yo-yoify": "^3.7.3"
  }
}
